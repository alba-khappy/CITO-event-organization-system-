html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= "Event organization system"
    link(rel='stylesheet', href='./main.css', type='text/css')
    script(src="https://api-maps.yandex.ru/2.1/?apikey=ваш API-ключ&lang=ru_RU" type="text/javascript")

    body
        include header.pug
        include breadcrumbs.pug
        section
            div.container.meet-container.meet-container--main-info
                h1.main-heading Мероприятие №1
                div.meet__container-info
                    div.meet__container-info--duration
                        span.text-style 25 / 08 / 2021  
                        span.text-style 13:00
                        p.text-style Длительность: 1 час
                    div
                        p.text-style Инициатор
                        p.meet__initiator-name Иванов И. И. 
                        p.text-style Менеджер
                img(src="./images/meeting-room-1.jpg", alt="").meet__room-img
                div.meet__container-info-room
                    div
                        h4.h4-style.meet__info-room--padding Переговорная
                        p.text-style Переговорная №3
                    div
                        h4.h4-style.meet__info-room--padding Количество участников
                        p.text-style 500 человек
            div.container.event-container.event-container--provision
                h2.h2-style.heading__h2 Обеспечение
                a(href="").meet__parameters-request.link-request  Заявка
                .provision__checkbox-container 
                    div.checkbox.checkbox--with-label.provision__checkbox
                        input(type="checkbox", name="provision")#checkbox-1.visually-hidden
                        label(for="checkbox-1") Вода
                    div.checkbox.checkbox--with-label.provision__checkbox
                        input(type="checkbox", name="provision")#checkbox-2.visually-hidden
                        label(for="checkbox-2") Канцелярские принадлежности
                    div.checkbox.checkbox--with-label.provision__checkbox
                        input(type="checkbox", name="provision")#checkbox-3.visually-hidden
                        label(for="checkbox-3") Пресса

                div.address-button-container.meet-address
                    address г. Москва, ул. Тверская,11
                    a(href="").blue-button-style.button-share Поделиться     
                div#map.map__meet

            div.container.meet-container 
                h2.h2-style.heading__h2.members__h2 Участники (Очно)
                div.members__table-container
                    table.members__table
                        thead 
                            tr 
                                td ФИО участника
                                td Организация
                                td Пропуск
                                td Парковка
                                td Таблица с ФИО
                        tbody 
                            tr
                                td Сидоров С. А.
                                td ЦИТО
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-4.visually-hidden
                                        label(for="checkbox-4").checkbox-label--without-label
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-5.visually-hidden
                                        label(for="checkbox-5").checkbox-label--without-label
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-6.visually-hidden
                                        label(for="checkbox-6").checkbox-label--without-label
                            tr
                                td Иванов И. И.
                                td СЮР
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-7.visually-hidden
                                        label(for="checkbox-7").checkbox-label--without-label
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-8.visually-hidden
                                        label(for="checkbox-8").checkbox-label--without-label
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-9.visually-hidden
                                        label(for="checkbox-9").checkbox-label--without-label
                            tr
                                td Доу Д. П.
                                td Амбрелла
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-10.visually-hidden
                                        label(for="checkbox-10").checkbox-label--without-label
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-11.visually-hidden
                                        label(for="checkbox-11").checkbox-label--without-label
                                td 
                                    div.checkbox.checkbox--without-label
                                        input(type="checkbox", name="agreements")#checkbox-12.visually-hidden
                                        label(for="checkbox-12").checkbox-label--without-label
                            tr 
                                td 
                                td 
                                td.members__link-align
                                    a(href="").link-request.link-request--align Заявка
                                td.members__link-align
                                    a(href="").link-request.link-request--align Заявка
                                td.members__link-align
                                    a(href="").link-request.link-request--align Заявка

            div.container.meet-container 
                
                h2.h2-style.heading__h2.meet__h2--conference ВКС
                a(href="").meet__parameters-request.link-request  Заявка
            
                div.parameters__inner-container.meet__inner-container
                    h2.h2-style.parameters__h2 Параметры конференции
                    div.parameters__checkbox-container
                        div.checkbox.checkbox--with-label.parameters__checkbox--1
                            input(type="checkbox", name="provision")#checkbox-13.visually-hidden
                            label(for="checkbox-13") Закрытая
                        div.checkbox.checkbox--with-label.parameters__checkbox--2
                            input(type="checkbox", name="provision")#checkbox-14.visually-hidden
                            label(for="checkbox-14") Видео-запись
                        div.checkbox.checkbox--with-label.parameters__checkbox--3
                            input(type="checkbox", name="provision")#checkbox-15.visually-hidden
                            label(for="checkbox-15") Аудио-запись
                        div.checkbox.checkbox--with-label.parameters__checkbox--4
                            input(type="checkbox", name="provision")#checkbox-16.visually-hidden
                            label(for="checkbox-16") Внешняя трансляция
                        div.checkbox.checkbox--with-label.parameters__checkbox--5
                            input(type="checkbox", name="provision")#checkbox-17.visually-hidden
                            label(for="checkbox-17") Открытая

                    div.parameters__info-container
                        input(type="number", placeholder="Количество докладчиков").input-style
                        div.input-style Удаленно
                            ul 
                                li 
                                li 
                                li 
                                li 
                        div.parameters__add-file
                            p Презентация:
                            form#upload-container(method="POST" action="").parameters__upload-container.file-downloaded
                                div 
                                    input(type="file", name="file", multiple, disabled="disabled")#file-input
                                    label(for="file-input") Файл.pdf

                                input(type="file", placeholder="" multiple="multiple")#add-file.input-style
            
                    div.distance-members-container
                        h2.distance-members__h2 Участники (удаленно)

                        div.members__table-container
                            table.members__table
                                thead 
                                    tr 
                                        td ФИО участника
                                        td Организация
                                        td E-mail участника
                                tbody 
                                    tr
                                        td Сидоров С. А.
                                        td ЦИТО
                                        td sidorov@gmail.ru
                                    tr
                                        td Иванов И. И.
                                        td СЮР
                                        td ivanov@gmail.ru
                                    tr
                                        td Доу Д. П.
                                        td Амбрелла
                                        td dou.dp@mail.ru

                        a(href="").members__conference-link Ссылка на конференцию (просмотр)
                        a(href="").members__conference-link Ссылка на конференцию (участие)
            
            div.container.meet-container
                h2.h2-style.meet__h2--polygraphy.heading__h2 Полиграфия / раздаточный материал
                div.polygraphy__inner-container
                    div.popup__select.select__component
                        div.select__main-item.input-style
                        ul.select__list.select__list--blue-style.select--close
                            li.select__item Формат 1
                            li.select__item Формат 2
                            li.select__item Формат 3
                    div.popup__select.select__component
                        div.select__main-item.input-style
                        ul.select__list.select__list--blue-style.select--close
                            li.select__item Плотность бумаги 1
                            li.select__item Плотность бумаги 2
                            li.select__item Плотность бумаги 3
                        
                    div.checkbox.checkbox--with-label.checkbox--polygraphy
                            input(type="checkbox", name="provision")#checkbox-18.visually-hidden
                            label(for="checkbox-18") Цветная печать
                    input(type="number", placeholder="Количество копий").input-style.input__polygraphy--copies
                    div.meet__added-file
                        img(src="./images/added-file.svg", alt="file icon")
                        span Файл.pdf
                    
                    a(href="").blue-button-style.button-polygraphy-request Заявка на полиграфию
                div.meet__button-save-wrapper
                    a(href="").blue-button-style.button-save Сохранить

                    
            
script(src='./select.js')
script(src='./map.js')